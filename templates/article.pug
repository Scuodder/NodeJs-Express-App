extends layout 

block content 

    h1= article.title
    h5 Written by #{author}
    p=article.body

    hr
    if user 
        if user.id === article.author
            a.btn.btn-primary.mr-2(href="/articles/edit/" + article._id ) Edit 
            a.btn.btn-danger.delete-article(href="/articles/delete/" + article._id) Delete